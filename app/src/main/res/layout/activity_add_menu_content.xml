<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMenuContentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/Days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:hint="Days"
                android:minHeight="48dp"
                android:textColor="#0C0C0C"
                android:textColorHint="#131313"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Breakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#9F7F33"
                android:gravity="center"
                android:text="Breakfast"
                android:textColor="#0C0C0C"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Breakfast1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:background="#fff"
                android:hint="Breakfast"
                android:minHeight="48dp"
                android:textColor="#0C0C0C"
                android:textColorHint="#131313"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/breakfast2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="#fff"
                android:hint="Breakfast"
                android:minHeight="48dp"
                android:textColor="#0C0C0C"
                android:textColorHint="#131313"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/Breakfast3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="#fff"
                android:hint="Breakfast"
                android:minHeight="48dp"
                android:textColor="#0C0C0C"
                android:textColorHint="#131313"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/Lunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#9F7F33"
                android:gravity="center"
                android:text="Lunch"
                android:textColor="#0C0C0C"
                android:textSize="25sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/Lunch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:background="#fff"
                android:hint="Lunch"
                android:minHeight="48dp"
                android:textColor="#0C0C0C"
                android:textColorHint="#131313"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/Lunch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="#fff"
                android:hint="Lunch"
                android:minHeight="48dp"
                android:textColor="#0C0C0C"
                android:textColorHint="#131313"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/Lunch3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="#fff"
                android:hint="Lunch"
                android:minHeight="48dp"
                android:textColor="#0C0C0C"
                android:textColorHint="#131313"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/Snacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#9F7F33"
                android:gravity="center"
                android:text="Snacks"
                android:textColor="#0C0C0C"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Snacks1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:background="#fff"
                android:hint="Snacks"
                android:minHeight="48dp"
                android:textColor="#0C0C0C"
                android:textColorHint="#131313"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/Snacks2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="#fff"
                android:hint="Snacks"
                android:minHeight="48dp"
                android:textColor="#0C0C0C"
                android:textColorHint="#131313"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Dinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#9F7F33"
                android:gravity="center"
                android:text="Dinner"
                android:textColor="#0C0C0C"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Dinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:background="#fff"
                android:hint="Dinner"
                android:minHeight="48dp"
                android:textColor="#0C0C0C"
                android:textColorHint="#131313"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/Dinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="#fff"
                android:hint="Dinner"
                android:minHeight="48dp"
                android:textColor="#0C0C0C"
                android:textColorHint="#131313"
                android:textSize="18sp" />

            <Button
                android:id="@+id/saveMenu"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTint="#955744"
                android:text="SAVE"
                android:textSize="18sp" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>